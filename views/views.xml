<odoo>
  <data>
    <!--************************FORMULARIO DE DATOS GENERALES********************-->
    <record id="datos_generales_view_form" model="ir.ui.view">
        <field name="name">datos_generales_view_form</field>
        <field name="model">datosgenerales</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" default_focus="1" placeholder="Nombre Del Solicitante" />
                            <br/>
                           <span>Recibe: <field name="recibe"/></span>
                        </h1>
                    </div>
                    <group>
                         <group>
                        <field name="direccion"/>
                              <field name="tipo_de_peticion"/>
                        </group>
                         <group>
                        <field name="unidad"/>
                        <field name="fecha_hora"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
  </data>
</odoo>